  "item": [
    {
      "name": "Get API Statistics",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "https://youtube-subtitles.github.io/api/stats.json",
          "protocol": "https",
          "host": ["youtube-subtitles", "github", "io"],
          "path": ["api", "stats.json"]
        },
        "description": "Get database statistics including total videos processed and current queue status"
      },
      "response": []
    },
    {
