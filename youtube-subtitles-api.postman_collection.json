          "raw": "https://youtube-subtitles.github.io/api/video/dQw4w9WgXcQ.json",
          "protocol": "https",
          "host": ["youtube-subtitles", "github", "io"],
          "path": ["api", "video", "dQw4w9WgXcQ.json"]
